{% extends 'layouts/layout.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="/css/contact.css">
{% endblock %}

{% block content %}
<div class="contact-page">
    <div class="contact-header">
        <h1>Contactez-nous</h1>
        <p class="subtitle">Nous sommes à votre écoute pour toute question ou suggestion.</p>
    </div>

    <div class="contact-container">
        <div class="contact-info">
            <h2>Coordonnées</h2>
            <p><i class="fas fa-envelope"></i>matthieu.barraque@efrei.net</p>
            <p><i class="fas fa-phone"></i> +33 1 11 11 11 89</p>
            <p><i class="fas fa-map-marker-alt"></i> 123, rue du caca, 75000 Paris</p>
        </div>

        <div class="contact-form">
            <h2>Écrivez-nous</h2>
            <form action="/contact" method="POST">
                <div class="form-group">
                    <label for="email">Votre Email <span>*</span></label>
                    <input type="email" id="email" name="email" required placeholder="votreemail@example.com">
                </div>

                <div class="form-group">
                    <label for="message">Votre Message <span>*</span></label>
                    <textarea id="message" name="message" rows="6" required placeholder="Écrivez ici..."></textarea>
                </div>

                <button type="submit" class="contact-submit">
                    <i class="fas fa-paper-plane"></i> Envoyer
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
