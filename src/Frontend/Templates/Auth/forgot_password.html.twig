{% extends 'layouts/layout.html.twig' %}

{% block content %}
<div class="register-container">
    <a href="/login" class="back-btn"><i class="fas fa-arrow-left"></i></a>

    <div class="register-box">
        <i class="fas fa-unlock-alt logo"></i>
        <h1>Mot de passe oublié</h1>
        
        {% if error %}
            <div class="error-message">
                <i class="fas fa-exclamation-triangle"></i> {{ error }}
            </div>
        {% endif %}
        
        {% if success %}
            <div class="success-message">
                <i class="fas fa-check-circle"></i> {{ success | raw }}
            </div>
        {% endif %}

        <form action="/forgot_password" method="post">
            <div class="form-group">
                <label for="email">Adresse E-mail</label>
                <input type="email" id="email" name="email" placeholder="votreemail@example.com" required>
            </div>
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
            <button type="submit">Envoyer le lien de réinitialisation</button>
        </form>

        <div class="info-text">
            <a href="/login">Retour à la connexion</a>
        </div>
    </div>
</div>
{% endblock %}
